@model DBL.Enitites.Products
@{ 
    var productcategory = ViewData["productcategorylists"] as List<SelectListItem>;
    var productattribute = ViewData["attributeslists"] as List<SelectListItem>;
}

<div class="modal-header">
    <h5 class="text-sm modal-title font-weight-light" id="allpoliciesModalLabel">Products</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    <div class="bs-stepper">
        <div class="bs-stepper-header" role="tablist">
            <div class="step" data-target="#logins-part">
                <button type="button" class="step-trigger" role="tab" aria-controls="logins-part" id="logins-part-trigger">
                    <span class="bs-stepper-circle">1</span>
                    <span class="bs-stepper-label">Logins</span>
                </button>
            </div>
            <div class="line"></div>
            <div class="step" data-target="#information-part">
                <button type="button" class="step-trigger" role="tab" aria-controls="information-part" id="information-part-trigger">
                    <span class="bs-stepper-circle">2</span>
                    <span class="bs-stepper-label">Various information</span>
                </button>
            </div>
        </div>
        <div class="bs-stepper-content">
            <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                <button class="btn btn-primary" onclick="stepper.next()">Next</button>
            </div>
            <div id="information-part" class="content" role="tabpanel" aria-labelledby="information-part-trigger">
                <div class="form-group">
                    <label for="exampleInputFile">File input</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="exampleInputFile">
                            <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                        </div>
                        <div class="input-group-append">
                            <span class="input-group-text">Upload</span>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary" onclick="stepper.previous()">Previous</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>







    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label class="text-sm font-weight-light" asp-for="Productname"></label>
                <input class="form-control form-control-sm" asp-for="Productname" id="productnameid" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="text-sm font-weight-light"></label>
                <select class="form-control form-control-sm" id="prodcategory" onchange="loadproductsubcategory()" asp-items="@productcategory">
                    <option value="0">---Select Category---</option>
                </select>
                <span></span>
            </div>
        </div>
        <div class="col-sm-6" id="productsubcategoryrowid" style="display:none">
            <div class="form-group">
                <label class="text-sm font-weight-light"></label>
                <select class="form-control form-control-sm" id="prodsubcategoryId">
                    <option value="0">---Select Subcategory---</option>
                </select>
                <span></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            Has Attributes ?
            <select class="form-control form-control-sm" id="hasattributeid" onchange="loadifhasattribute()">
                <option value="0">---Choose here---</option>
                <option value="1">Yes</option>
                <option value="2">No</option>
            </select>
        </div>
    </div>
    <div class="row" id="Attributesrowid" style="display:none;">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="text-sm font-weight-light"></label>
                <select class="form-control form-control-sm" id="prodattribute" onchange="loadproductattribute()" asp-items="@productattribute">
                    <option value="0">---Select Attribute---</option>
                </select>
                <span></span>
            </div>
        </div>
        <div class="col-sm-6" id="prodattributevaluesrowid" style="display:none">
            <div class="form-group">
                <label class="text-sm font-weight-light"></label>
                <select class="form-control form-control-sm select2" multiple="multiple" id="prodattributevaluesid">
                    <option value="0">---Select Attributevalues---</option>
                </select>
                <span></span>
            </div>
        </div>
    </div>
    <div class="row" id="productcolorrowid" style="display:none;">
        <div class="col-sm-12">
            <div class="form-group">
                <label class="text-sm font-weight-light"></label>
                <select class="form-control form-control-sm select2" multiple="multiple" id="prodcolorId">
                    <option value="0">---Select Color---</option>
                </select>
                <span></span>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <input type="submit" onclick="addproducts()" class="btn btn-sm btn-info" value="Save">
</div>